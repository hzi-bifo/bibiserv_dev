                template="/WEB-INF/templates/toolTpl.xhtml">

    <ui:define name="headContentTitle">
      #{messages.property('<#getToolId/#>_name')}
    </ui:define>


   
    <ui:define name="app_title">
        <h:outputText escape="false" class="title" value="#{messages.property('<#getToolId/#>_name')}"/>
        <div class="separator"/>
    </ui:define>

   
    <!-- Display manual introductory text -->
    <ui:define name="app_content">
        
        
        <#ifmanualexists#>
        
      
    <h:outputText escape="false" class="content" value="#{messages.property('<#getManualId/#>_introductoryText')}"/>
     

    <#ifexecutableexists#>

    <!-- Generate Function Description -->
    <#for_each_function#>
    <h:panelGroup>
        <h4>#{messages.property('###FUNCTION_ID###_name')}</h4>
        <h:outputText escape="false" class="content" value="#{messages.property('###FUNCTION_ID###_description')}"/>
    </h:panelGroup>
    <#/for_each_function#>

    <!-- Generate Input/Output data type description -->
    <h4>#{messages.property('de.unibi.techfak.bibiserv.bibimainapp.IO')}</h4>

    <#for_each_input#>
    <h:panelGroup>
        <h4>INPUT :: #{messages.property('###INPUT_ID###_name')}</h4>
        <h:outputText escape="false" class="content" value="#{messages.property('###INPUT_ID###_description')}"/>
    </h:panelGroup>
    <#/for_each_input#>

    <#for_each_output#>
    <h:panelGroup>
        <h4>OUTPUT :: #{messages.property('###OUTPUT_ID###_name')}</h4>
        <h:outputText escape="false" class="content" value="#{messages.property('###OUTPUT_ID###_description')}"/>
    </h:panelGroup>
    
    <#/for_each_output#>

    <!-- Generate Parameter description -->
    <h4>#{messages.property('de.unibi.techfak.bibiserv.bibimainapp.PARAMETER')}</h4>
    <table class="param_table">
        <tr>
            <th class="param_table_header">Name</th>
            <th class="param_table_header">Description</th>
        </tr>
        <#for_each_parameter#>
        <tr class="###CSS_CLASS###">
            <td class="param_table_data"><a name="###PARAMETER_ID###">#{messages.property('###PARAMETER_ID###_name')}</a></td>
            <td class="param_table_data"><h:outputText escape="false" class="content" value="#{messages.property('###PARAMETER_ID###_description')}"/></td>
        </tr>
        <#/for_each_parameter#>
    </table>
    
    
    <#/ifexecutableexists#>
    
    <!-- Custom Content -->
     <h:outputText escape="false" class="content" value="#{messages.property('<#getManualId/#>_customContent')}"/>
         
    <#/ifmanualexists#>
    
    
    <#ifmanualnotexists#>
        <!-- The tool description doesn't contain a manual during codegen processing. This dummy class generated from the
            general manual template can be used as start point for a self created manual page. Replace ##MANUALID##
            below with the manual id you used in the tool description. To take benefit from a mostly autogenerated
            page just start the codegen process again an copy the manual.xhtml page -->
     
        
        <h:outputText escape="false" class="content" value="#{messages.property('##MANUALID##_introductoryText')}"/>
        
         <h:outputText escape="false" class="content" value="#{messages.property('##MANUALID##_customContent')}"/>
        
    <#/ifmanualnotexists#>
    
 </ui:define>
 
